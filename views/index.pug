doctype html
html
    head
        title #{title}
        link(rel="stylesheet", href="../style.css" type="text/css")
    body
        h1 #{image}
        section#content
            section#nav
                div#brand-image 
                    img(src=logo alt="A DRG Company" height="75px" width="75px") 
                div#nav-title
                        h1.brand-text #{title}
            section#splash(style=splashStyle)
                h3.brand-text #{brandPhrase}
                h4.brand-sub-text Gather, Eat, Experience. 
            section#menu.brand-color(style=colorStyle) 
                h1.brand-text.center Menu 
                ul#menu-items 
                    each n in [0,1,2,3]
                        <div class="item-and-price">
                            li.menu-item #{foodItems.foodItemArr[n]}<span class="menu-item-price">$#{foodItems.foodItemPriceArr[n]}</span>
                        </div>
                                ul.item-description
                                    li.menu-item-description #{foodItems.foodItemDescArr[n]} 
                button.buttons Order Now 
            section#about 
                h1.brand-text #{title}
                img(src=logo, alt="A DRG Company")
                h3.brand-text.center About Us 
                h4.brand-sub-text #{mission} 
                //-get some text to put here
            section#specials.brand-color(style=colorStyle)
                h3.brand-text Sign up for Special Offers 
                h4.brand-sub-text Make sure to never miss a special offer from #{title}, click below to enroll in our loyalty program.
                button#sign-up-button.buttons Sign Up 
            section#socialmedia 
                h4.brand-sub-text Join us on Social Media
                div
                    img.social-media-icon(src="https://cdn2.iconfinder.com/data/icons/social-media-2285/512/1_Instagram_colored_svg_1-512.png", alt="social media icon")
                    img.social-media-icon(src="https://cdn2.iconfinder.com/data/icons/social-media-2285/512/1_Twitter3_colored_svg-512.png", alt="social media icon")
                    img.social-media-icon(src="https://cdn1.iconfinder.com/data/icons/social-media-2285/512/Colored_Facebook3_svg-512.png", alt="social media icon")
            footer#footer.brand-color(style=colorStyle) Copyright Delicious Restauranteer Group 2022
